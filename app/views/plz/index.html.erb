<body>
  <!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
	
    <div class="container">
		
        <div class="card card-container">
			<p id="notice"><%=notice%></p>
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form action='/plz/create' method='post' class="form-signin">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <span id="reauth-email" class="reauth-email"></span>
                <input type="text" name="name" id="inputName" class="form-control" placeholder="Name" required autofocus>
                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="E-mail" required>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" name="sign" value="true" type="submit">Sign in</button>

                <button class="btn btn-lg btn-primary btn-block btn-signin"  name="sign" value="false" type="submit">Log in</button>
            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
</body>